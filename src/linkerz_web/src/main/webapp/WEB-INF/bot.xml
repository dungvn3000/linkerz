<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="connectionFactory" class="com.rabbitmq.client.ConnectionFactory">
        <property name="host" value="127.0.0.1"/>
    </bean>

    <bean id="newFeedBot" class="org.linkerz.crawler.bot.NewFeedBot" init-method="start" destroy-method="stop">
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="mongoOperations" ref="mongoTemplate"/>
        <property name="scheduler" ref="schedulerFactoryBean"/>
    </bean>

</beans>