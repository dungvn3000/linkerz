<html t:type="adminLayout" title="LinkerZ Parser Tool"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

    <section class="span6">

        <t:zone t:id="linksZone">
            <t:loop source="links" value="link">
                <div class="row-fluid">
                    <div class="span4">
                        <img src="http://vnexpress.net/${link.featureImageUrl}" alt="" width="80" height="80" style="padding-left:60px;"/>
                    </div>
                    <div class="span8">
                        <h5>
                            <a href="${link.url}">
                                ${link.title}
                            </a>
                        </h5>
                        <p>${link.description}</p>
                    </div>
                </div>
                <br/>
            </t:loop>
        </t:zone>

    </section>

    <section class="span6">

        <t:form t:id="parserForm" class="well form-inline">
            <t:errors/>
            <fieldset>

                <div class="control-group">
                    <lable class="control-label">
                        UrlRegex:
                    </lable>
                    <div class="controls">
                        <t:textfield value="parseData.urlRegex" t:id="urlRegexTxt"/>
                    </div>
                </div>

                <div class="control-group">
                    <lable class="control-label">
                        Title:
                    </lable>
                    <div class="controls">
                        <t:textfield value="parseData.titleSelection" t:id="titleSelectionTxt" class="input-medium" placeholder="titleSelection"/>
                        <t:textfield value="parseData.titleAttName" t:id="titleAttNameTxt" class="input-small" placeholder="titleAttName"/>
                        <t:textfield value="parseData.titleMaxLength" t:id="titleMaxLengthTxt" class="input-small" placeholder="maxlength"/>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">
                        description:
                    </label>

                    <div class="controls">
                        <t:textfield value="parseData.descriptionSelection" t:id="descriptionSelectionTxt" class="input-medium" placeholder="descriptionSelection"/>
                        <t:textfield value="parseData.descriptionAttName" t:id="descriptionAttNameTxt" class="input-small" placeholder="descriptionAttName"/>
                        <t:textfield value="parseData.descriptionMaxLength" t:id="descriptionMaxLengthTxt" class="input-small" placeholder="descriptionMaxLength"/>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label">
                        imgSelection:
                    </label>

                    <div class="controls">
                        <t:textfield value="parseData.imgSelection" t:id="imgSelectionTxt"/>
                    </div>
                </div>

                <div class="form-actions">
                    <button class="btn btn-primary" type="submit">Test</button>
                    <t:actionlink t:id="cancelBtn" class="btn">Cancel</t:actionlink>
                </div>
            </fieldset>
        </t:form>

        <t:form t:id="testForm" class="well form-search" zone="linksZone">
            <t:errors/>
            <lable class="control-label">Url Test:</lable>
            <t:textfield value="urlTest" t:id="urlTestTxt"/>
            <t:textfield value="numberOfUrl" t:id="numberOfUrl" class="input-mini" placeholder="numberOfUrl"/>
            <div class="form-actions">
                <button class="btn btn-primary" type="submit">
                    Download
                </button>
            </div>
        </t:form>

    </section>

</html>
