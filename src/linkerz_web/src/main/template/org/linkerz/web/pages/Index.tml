<html t:type="layout" title="LinkerZ Index"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

<script>
    function onLinkClick($id) {
        $.ajax({
            url:"http://localhost:8080/linkerz_web/home/index:linkclick/" + $id
        })
    }
</script>

<section class="row-fluid">
    <t:loop source="links" value="link">
        <div class="row-fluid">
            <div class="span2">
                <a href="${link.url}" target="_blank" onclick="onLinkClick('${link.id}');">
                    <img src="images/${link.id}" alt="" width="80" height="80"
                         style="padding-left:20px;"/>
                </a>
            </div>
            <div class="span8">
                <h5>
                    <a href="${link.url}" target="_blank" onclick="onLinkClick('${link.id}');">
                        ${link.title}
                    </a>
                </h5>

                <p>${link.description}</p>
            </div>
        </div>
        <br/>
    </t:loop>
</section>

</html>
