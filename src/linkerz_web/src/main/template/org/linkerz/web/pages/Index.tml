<html t:type="layout" title="LinkerZ Index"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
        >

    <section class="row-fluid">

        <t:loop source="links" value="link">
            <div class="row-fluid">
                <div class="span2">
                    <img src="http://localhost:8080/linkerz_web/images/${link.id}" alt="" width="80" height="80" style="padding-left:20px;"/>
                </div>
                <div class="span8">
                    <h5>
                        <a href="${link.url}">
                            ${link.title}
                        </a>
                    </h5>
                    <p>${link.description}</p>
                </div>
            </div>
            <br/>
        </t:loop>

    </section>

</html>
