<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="connectionFactory" class="com.rabbitmq.client.ConnectionFactory">
        <property name="host" value="127.0.0.1"/>
    </bean>

    <bean id="crawlerController" class="org.linkerz.job.queue.controller.RabbitMQController" init-method="start" destroy-method="stop">
        <property name="connectionFactory" ref="connectionFactory"/>
        <property name="prefetchCount" value="1"/>
        <property name="handlers">
            <list>
                <ref bean="newFeedHandler"/>
            </list>
        </property>
    </bean>

</beans>