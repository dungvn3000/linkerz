<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation=
               "http://www.springframework.org/schema/beans
                http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="downloadController" class="org.linkerz.crawler.core.downloader.controller.DefaultDownloadController">
        <property name="downloaders">
            <map>
                <entry key="*">
                    <bean class="org.linkerz.crawler.core.downloader.DefaultDownloader"/>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="parserController" class="org.linkerz.crawler.core.parser.controller.DefaultParserController">
        <property name="parsers">
            <map>
                <entry key="*">
                    <bean class="org.linkerz.crawler.core.parser.DefaultParser"/>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="defaultController" class="org.linkerz.crawler.core.controller.DefaultController">
        <property name="downloadController" ref="downloadController"/>
        <property name="parserController" ref="parserController"/>
        <property name="hazelcastInstance" ref="instance"/>
    </bean>

</beans>