<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="baseController" class="org.linkerz.crawler.core.controller.BaseController">
        <property name="downloaders">
            <map>
                <entry key="*">
                    <bean class="org.linkerz.crawler.core.download.BaseDownloader"/>
                </entry>
            </map>
        </property>
        <property name="parsers">
            <map>
                <entry key="*">
                    <bean class="org.linkerz.crawler.core.parser.BaseParser"/>
                </entry>
            </map>
        </property>
    </bean>

</beans>